    android:versionName="0.4.28" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" android:maxSdkVersion="22"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="22"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="22"/>

    <application
        android:name="com.yvan.numandjiapuzzle.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.yvan.numandjiapuzzle.NumModeActivity"></activity>
        <activity 
            android:name="com.yvan.numandjiapuzzle.PicModeActivity"></activity>
        <activity 
            android:name="com.yvan.numandjiapuzzle.RankActivity"></activity>
        <activity 
            android:name="com.yvan.numandjiapuzzle.AboutMeActivity"></activity>
    </application>

</manifest>
